<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "title", "Activity Name" %>
    <%= form.text_field "title" %>
  </p>

  <p>  
    <%= form.label "description", "Describe what you did!" %>
    <%= form.text_field "description" %>
  </p>

  <p>  
    <%= form.label "posted_on", "When did you do it?" %>
    <%= form.date_field "posted_on" %>
  </p>

    <%= form.hidden_field "place_id" %>

  <%= form.submit %>
<% end %>
